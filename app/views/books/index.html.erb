  <div class="container px-5 px-sm-0">
    <div id="error_explanation">
      <% if @book.errors.any? %>
        <h3>
          <%= @book.errors.count %> errors prohibited this obj from being saved:</h3>
        <ul>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
    </div>
    <div class="row">
      <div class="col-md-3">
        <h2>User info</h2>
        <%= render 'users/user', user: @user %>
        <h2 class="mt-3">New book</h2>
        <%= render 'books/new', book: @book %>
      </div>
      <div class="col-md-8 offset-md-1">
        <h2>Books</h2>
        <%= link_to '新しい順', books_path(sort_create: "true") %>
        |
        <%= link_to '評価の高い順', books_path(sort_rate: "true") %>
        <table class="table table-hover table-inverse">
          <thead>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th></th>
            <th></th>
            <th></th>
          </thead>
          <tbody>
            <% @books.each do |book| %>
              <% user = User.find(book.user_id) %>
              <tr>
                <td>
                  <%= link_to user_path(user.id) do %>
                    <%= attachment_image_tag user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "40x40" %>
                  <% end %>
                </td>
                <td>
                  <%= link_to book_path(book.id) do %>
                    <%= book.title %>
                  <% end %>
                </td>
                <td>
                  <%= book.body %>
                </td>
                <td id="favorite_buttons_<%= book.id %>">
                  <%= render 'favorites/favorite', book: book %>
                </td>
                <td class="relative-book-rate">
                  <%= render 'books/rate', book: book %>
                </td>
                <td>コメント数：<%= book.book_comments.count %></td>
              </tr>
          　<% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>